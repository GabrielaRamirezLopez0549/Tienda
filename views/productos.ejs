<%- include('./template/cabecera'); %>

<!--Se sube el archivo csv de los productos-->

    <body>
        <div class="wrapper">

            <%- include('./template/navbar'); %>


                <!-- Cargar Archivo -->

                <h1 id="Titulo">Lista de productos</h1>
                <form action="/uploadfile" enctype="multipart/form-data" method="post">
                    <input type="file" name="uploadfile" accept='csv'>
                    <input type="submit" value="Upload CSV" class="btn btn-success">
                    <button type="button" class="btn btn-outline-primary"
                        onclick="document.location.reload();">Recargar</button>
                </form>

                <!--Tabla donde se muestra los datos cargados desde la base de datos y el formulario anterior-->

                <table class="table text-center">
                    <thead>
                        <tr class="bg-info">
                            <th scope="col">Codigo</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Nit</th>
                            <th scope="col">Precio compra</th>
                            <th scope="col">Iva</th>
                            <th scope="col">Precio venta</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (arrayProductos.length> 0 ) { %>
                            <% arrayProductos.forEach(producto=> { %>
                                <tr>
                                    <th scope="row">

                                        <%= producto.codigo_producto%>
                                    </th>
                                    <td>
                                        <%= producto.nombre_producto%>
                                    </td>
                                    <td>
                                        <%= producto.nitproveedor%>
                                    </td>
                                    <td>
                                        <%= producto.precio_compra%>
                                    </td>
                                    <td>
                                        <%= producto.ivacompra%>
                                    </td>
                                    <td>
                                        <%= producto.precio_venta%>
                                    </td>
                                </tr>

                                <% }) %>
                                    <% } %>

                    </tbody>
                </table>

        </div>




        <%- include('./template/footer', {titulow:'Inicio'}); %>