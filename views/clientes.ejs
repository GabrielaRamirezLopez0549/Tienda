<%- include('./template/cabecera'); %>

    <body>
        <div class="wrapper">
            <%- include('./template/navbar'); %>
                <form action="/clientes" method="post">
                    <div class="form-group form-row">
                        <div class="col">
                            <label for="inputEmail4">Cédula</label>
                            <input type="text" class="form-control" placeholder="Cédula" name="Cedula">
                        </div>
                        <div class="col">
                            <label for="inputEmail4">Teléfono</label>
                            <input type="text" class="form-control" placeholder="Teléfono" name="Telefono">
                        </div>
                    </div>

                    <div class="form-group form-row">
                        <div class="col">
                            <label for="inputEmail4">Nombre completo</label>
                            <input type="text" class="form-control" placeholder="Nombre completo" name="Nombre">
                        </div>
                        <div class="col">
                            <label for="inputEmail4">Correo eléctronico</label>
                            <input type="text" class="form-control" placeholder="Correo eléctronico" name="Correo">
                        </div>
                    </div>

                    <div class="form-group form-row">
                        <div class="col">
                            <label for="inputEmail4">Dirección</label>
                            <input type="text" class="form-control" placeholder="Dirección" name="Direccion">
                        </div>
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto text-center">
                        <button type="submit" class="btn btn-info" style="margin-right:70px" >Crear</button>
                        <button type="button" class="btn btn-outline-primary"
                            onclick="document.location.reload();">Recargar tabla</button>
                    </div>
                </form>



                <table class="table">
                    <thead>
                        <tr class="bg-info">
                            <th scope="col">Cédula</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Nombre completo</th>
                            <th scope="col">Correo eléctronico</th>
                            <th scope="col">Dirección</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (arrayClientes.length> 0 ) { %>
                            <% arrayClientes.forEach(cliente=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= cliente.Cedula%>
                                    </th>
                                    <td>
                                        <%= cliente.Telefono%>
                                    </td>
                                    <td>
                                        <%= cliente.Nombre%>
                                    </td>
                                    <td>
                                        <%= cliente.Correo%>
                                    </td>
                                    <td>
                                        <%= cliente.Direccion%>
                                    </td>
                                    <td>
                                        <div class="row">
                                            <div class="col">
                                                <a href="#" class="button">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        fill="currentColor" class="bi bi-pencil-square"
                                                        viewBox="0 0 16 16" style="color:#6d7fcc">
                                                        <path
                                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd"
                                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </a>

                                            </div>
                                            <div class="col">

                                                <a href="#" class="button">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        fill="currentColor" class="bi bi-trash " viewBox="0 0 16 16"
                                                        style="color:#FF3D00">
                                                        <path
                                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                        <path fill-rule="evenodd"
                                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <% }) %>
                                    <% } %>

                    </tbody>
                </table>
        </div>
        <%- include('./template/footer'); %>